{% block javascripts %}

    <script>
        $(document).ready(function(){

            $('[data-toggle="tooltip"]').tooltip();
            $('#tabla').DataTable({
                "order": [[ 0, "asc" ]],
                "lengthChange": false,
                "paginate":false,
                "lengthMenu": [[25, 10, 50, -1], [25, 10, 50, "Todos"]],
                "language": {
                    "url": "{{ asset('js/Spanish.json') }}"
                }
            });


            var table = $('#tabla').DataTable();

            $('#tabla tbody').on( 'click', 'tr', function () {
                if ( $(this).hasClass('selected') ) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            } );

            if($('#mensaje').val() == ""){
                $("#divMensaje").modal("hide");
            }else{
                if($('#tipoMensaje').val()=="danger"){
                    $("#idmodalheader").addClass("modal-header-danger");
                }else{
                    $("#idmodalheader").addClass("modal-header");
                }
                $("#divMensaje").modal("show");
            };
        });

        function verBox(nro_box, nro_usuario, ck_inmueble, ck_comercio, ck_moto, ck_cementerio, ck_escribano, ck_juicio, ck_varios, ck_arba, prioridad) {
            //---------------------------------
            //MUESTRA VENTANA - MODIFICA BOX
            //---------------------------------

            $("#divModificar").modal("show");

            for (var i = 1; i <= 12; i++){
                if (i == nro_box){
                    document.getElementById('cmb_boxes').value=i;
                }
            }

            var table = document.getElementById("tabla");
            var rows  = table.getElementsByTagName("tr");
            for (var i = 1; i < rows.length; i++) {
                if ((table.rows[i].className == 'odd selected') || (table.rows[i].className == 'even selected')){
                    table.rows[i].classList.remove("selected");
                    break;
                }//end if
            }

            document.getElementById('cmb_usuario').value=nro_usuario;

            document.getElementById('chk_inmuebles').checked    = false;
            document.getElementById('chk_comercios').checked    = false;
            document.getElementById('chk_motos').checked        = false;
            document.getElementById('chk_cementerio').checked   = false;
            document.getElementById('chk_escribano').checked    = false;
            document.getElementById('chk_juicio').checked       = false;
            document.getElementById('chk_varios').checked       = false;
            document.getElementById('chk_arba').checked       = false;

            if (ck_inmueble == 'P'){
                document.getElementById('chk_inmuebles').checked = true;
            }

            if (ck_comercio == 'C'){
                document.getElementById('chk_comercios').checked = true;
            }

            if (ck_moto == 'M'){
                document.getElementById('chk_motos').checked = true;
            }

            if (ck_cementerio == 'T'){
                document.getElementById('chk_cementerio').checked = true;
            }

            if (ck_escribano == 'E'){
                document.getElementById('chk_escribano').checked = true;
            }

            if (ck_juicio == 'J'){
                document.getElementById('chk_juicio').checked = true;
