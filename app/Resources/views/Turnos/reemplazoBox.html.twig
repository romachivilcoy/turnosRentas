{% block body %}

    <div class="container">
        <div class="row mt-4 text-success headb">
            <div class="col-12 pt-3 pb-3">
                <h4><strong>REEMPLAZO DE BOX</strong></h4>
            </div>
        </div>
    </div>
    <div class="container" style="height: 80vh;">
        <input type="hidden"  id="mensaje" name="mensaje" value="{{ mensaje}}" >
        {% if mensaje != '' %}
        <div class="row" id="divMensaje">
            <div class="col-12">
                <div class="alert alert-warning" role="alert" >
                    <label id="divMensaje" style="font-weight: bold;">{{mensaje }}</label>
                </div>
            </div>
        </div>
        {%endif %}
        <div class="row">
            <div class="col-12">
                {% for box in boxes %}
                    <button type="button" onclick="Iniciar({{ box.usbxNrobox}},{{ box.usbxIdus}});" class="btn btn-warning" style=" width:250px; height: 50px; position: relative; outline-color: #000;" text id="bt{{ box.usbxNrobox }}" data-toggle="tooltip" data-placement="top"   title="Este es box de reemplazo, por lo que seguramente ha cambiado de box fÃ­sico.-" >INICIAR BOX - ({{ box.usbxNrobox }}) <span class="fa fa-power-off" aria-hidden="true"></span></button>
                {% endfor %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function(){
            if($('#mensaje').val() == ""){
                $("#divMensaje").hide();
            }else{
                $("#divMensaje").show();
            };
        });
              //------------------------------------
        //INICIA el Box
        //------------------------------------
        function Iniciar(nrobox,usuario){
            $.ajax({
                type: 'POST',
                data: {'nro_box': nrobox, 'estadob': 'S','usuario':usuario},
                url: "{{ url('boxInicio') }}",
                success:function(data){
                    if(data != "no_data"){
                        datojq = data;
                        var boxs =datojq[1].boxet;
                        if (boxs =='S'){
                            location.href = "{{ url('listaBoxes')}}" ;
                        }
                    }
                }
            })
        }

    </script>
{% endblock %}