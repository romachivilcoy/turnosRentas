        function actulizaBoxes(iduser, nro_box){
            $.ajax({
                type: 'POST',
                data: {'idUsuario': iduser},
                url: "{{ url('buscarBoxUsuarios') }}",
                success: function (data) {
                    var respuesta = data;

                    $("#cmb_boxes option").remove();
                    $("#cmb_usuario option").remove();

                    var cant_box_ocu = respuesta[0].arr_box_ocupados.length;
                    var control;

                    var i;
                    for (i = 1; i <= 12; i++) {
                        control = 0;

                        for (var rp = 0; rp < cant_box_ocu; rp++) {
                            if (i == respuesta[0].arr_box_ocupados[rp].nro_box_ocupado) {
                                control = 1;
                                break;
                            }
                        }//endFor

                        if (control == 0) {
                            $("#cmb_boxes").append('<option value=' + i + '>' + i + '</option>');
                        }//if
                    }//endFor

                    var cant_usu = respuesta[0].arr_usuarios.length;
                    for (i = 0; i < cant_usu; i++) {
                        $("#cmb_usuario").append('<option value=' + respuesta[0].arr_usuarios[i].usist_id + '>' + respuesta[0].arr_usuarios[i].usist_nombre + '</option>');
                    }//
                    if (iduser != 0) {
                        document.getElementById('cmb_usuario').value = iduser;
                        document.getElementById('cmb_boxes').value = nro_box;

                        $("#cmb_usuario").attr('disabled', true);
                    } else {
                        $("#cmb_usuario").attr('disabled', false);
                    }//

                }//endSuccess
            })//endAjac
        }//endFunction

